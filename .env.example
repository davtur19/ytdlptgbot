# Telegram Bot API Configuration
TELEGRAM_API_ID=123456  # Get from https://my.telegram.org
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890  # Get from https://my.telegram.org

# Bot Configuration
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz  # Get from @BotFather
ALLOWED_USERIDS=123456789,987654321  # Your Telegram user ID and other allowed users
ADMIN_USERIDS=123456789  # Your Telegram user ID and other admins
ALLOWED_GROUPIDS=-1001234567890  # Your group IDs

# Optional Settings
MAX_CONCURRENT_DOWNLOADS=3
MAX_FILE_SIZE=2147483648
SUPPORTED_SITES=youtube,youtu.be,instagram,twitter,tiktok,facebook,reddit,pinterest,tumblr,vk,ok.ru,dailymotion,vimeo,soundcloud,twitch,bilibili,linkedin
TELEGRAM_API_URL=http://telegram-bot-api:8081/bot
ENABLE_DEBUG_LOGGING=false

# Download Settings
MAX_URL_LENGTH=2048
MAX_FILENAME_LENGTH=255
DOWNLOAD_TIMEOUT=300
SOCKET_TIMEOUT=30
MAX_RETRIES=3
ALLOWED_EXTENSIONS=mp4,webm,mkv,mp3,m4a,jpg,jpeg,png,gif
STRICT_URL_VALIDATION=true
SANITIZE_FILENAMES=true

# Rate Limiting Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PERIOD=3600
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_ADMIN_PERIOD=3600
RATE_LIMIT_ADMIN_MAX_REQUESTS=50
RATE_LIMIT_COOLDOWN=300

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"